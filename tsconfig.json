{
  "compilerOptions": {
    "declaration": true,
    "declarationMap": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "sourceMap": true,
    "strict": true,
    "target": "es6",
    "removeComments": true,
    "rootDir": "./src",
    "resolveJsonModule": true
  },
  "include": ["./src"],
  "exclude": ["node_modules", "dist"]
}
