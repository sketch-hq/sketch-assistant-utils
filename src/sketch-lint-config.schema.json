{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Sketch Lint Config",
  "description": "This schema defines a valid Sketch Lint Config",
  "type": "object",
  "required": ["name", "sketchLint", "title"],
  "additionalProperties": true,
  "properties": {
    "name": { "type": "string" },
    "description": { "type": "string" },
    "title": { "type": "string" },
    "dependencies": {
      "type": "object",
      "additionalProperties": { "type": "string" }
    },
    "sketchLint": {
      "type": "object",
      "additionalProperties": false,
      "required": ["rules"],
      "properties": {
        "defaultSeverity": {
          "type": "integer",
          "enum": [1, 2, 3]
        },
        "rules": {
          "type": "object",
          "additionalProperties": {
            "type": "object",
            "additionalProperties": true,
            "required": ["active"],
            "properties": {
              "active": { "type": "boolean" },
              "severity": { "type": "integer", "enum": [1, 2, 3] }
            }
          }
        }
      }
    }
  }
}
